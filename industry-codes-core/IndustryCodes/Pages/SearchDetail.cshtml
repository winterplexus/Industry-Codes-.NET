@page
@model SearchDetailModel
@{
    ViewBag.Title = "Search Detail";
}

<section id="messages">
    @Html.ValidationMessage("ErrorMessage")
</section>

<section id="detailform">
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title" contenteditable="true">@ViewBag.Title</h3>
        </div>

        <div class="panel-body">
            <form method="post" role="form">
                @if (!string.IsNullOrEmpty(Model.ViewModel.NAICSCode))
                {
                    <input type="hidden" asp-for="ViewModel.Keyword" />
                    <input type="hidden" asp-for="ViewModel.KeywordOption" />

                    <div class="well well-sm">
                        <table class="table table-striped table-condensed">
                            <thead></thead>
                            <tbody>
                                <tr>
                                    <td class="col-sm-2">
                                        <label asp-for="ViewModel.NAICSCode" name="NAICSCode" class="control-label"></label>:
                                    </td>
                                    <td class="col-sm-10">
                                        @Model.ViewModel.NAICSCode
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-2">
                                        <label asp-for="ViewModel.NAICSDescription" name="NAICSDescription" class="control-label"></label>:
                                    </td>
                                    <td class="col-sm-10">
                                        @Model.ViewModel.NAICSDescription
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-2">
                                        <label asp-for="ViewModel.SICCode" name="SICCode" class="control-label"></label>:
                                    </td>
                                    <td class="col-sm-10">
                                        @Model.ViewModel.SICCode
                                    </td>
                                </tr>
                                <tr>
                                    <td class="col-sm-2">
                                        <label asp-for="ViewModel.SICDescription" name="SICDescription" class="control-label"></label>:
                                    </td>
                                    <td class="col-sm-10">
                                        @Model.ViewModel.SICDescription
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                }

                <div class="row">
                    <div class="col-sm-2">
                        <input type="submit" name="BackButton" value="Back" class="btn btn-primary btn-sm" title="Return to search input">
                    </div>
                    <div class="col-sm-10"></div>
                </div>
            </form>
        </div>
    </div>
</section>  
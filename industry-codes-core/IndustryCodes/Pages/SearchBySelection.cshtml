@page
@model SearchBySelectionModel
@{
    ViewData["Title"] = "Search NAICS/SIC Codes By Selection";
}

<section id="messages">
    @Html.ValidationMessage("ErrorMessage")
</section>

<section id="selectionform">
    <br />
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title" contenteditable="true">@ViewBag.Title</h3>
        </div>

        <div class="panel-body">
            <form method="post" role="form">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ViewModel.IndustrySectors" class="control-label"></label>:
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="ViewModel.SelectedIndustrySector" asp-items="@Model.ViewModel.IndustrySectors" style="width:90%" onchange="this.form.submit();" title="Select a industry sector description item"></select>
                    </div>
                    <div class="col-sm-2"></div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ViewModel.IndustrySubsectors" class="control-label"></label>:
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="ViewModel.SelectedIndustrySubsector" asp-items="@Model.ViewModel.IndustrySubsectors" style="width:90%" onchange="this.form.submit();" title="Select a industry subsector description item"></select>
                    </div>
                    <div class="col-sm-2"></div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ViewModel.NAICSDescriptions" class="control-label"></label>:
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="ViewModel.SelectedNAICSDescription" asp-items="@Model.ViewModel.NAICSDescriptions" style="width:90%" onchange="this.form.submit();" title="Select a NAICS description item"></select>
                    </div>
                    <div class="col-sm-2"></div>
                </div>
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="ViewModel.SICDescriptions" class="control-label"></label>:
                    </div>
                    <div class="col-sm-8">
                        <select asp-for="ViewModel.SelectedSICDescription" asp-items="@Model.ViewModel.SICDescriptions" style="width:90%" onchange="this.form.submit();" title="Select a SIC description item"></select>
                    </div>
                    <div class="col-sm-2"></div>
                </div>

                <br />

                <div class="well well-sm">
                    <table class="table table-striped table-condensed">
                        <thead></thead>
                        <tbody>
                            <tr>
                                <td class="col-sm-2">
                                    <label asp-for="ViewModel.NAICSCode" class="control-label"></label>:
                                </td>
                                <td class="col-sm-10">
                                    @Model.ViewModel.NAICSCode
                                </td>
                            </tr>
                            <tr>
                                <td class="col-sm-2">
                                    <label asp-for="ViewModel.NAICSDescription" class="control-label"></label>:
                                </td>
                                <td class="col-sm-10">
                                    @Model.ViewModel.NAICSDescription
                                </td>
                            </tr>
                            <tr>
                                <td class="col-sm-2">
                                    <label asp-for="ViewModel.SICCode" class="control-label"></label>:
                                </td>
                                <td class="col-sm-10">
                                    @Model.ViewModel.SICCode
                                </td>
                            </tr>
                            <tr>
                                <td class="col-sm-2">
                                    <label asp-for="ViewModel.SICDescription" class="control-label"></label>:
                                </td>
                                <td class="col-sm-10">
                                    @Model.ViewModel.SICDescription
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </div>

                <div class="row">
                    <div class="col-sm-1">
                        <input type="submit" name="ClearButton" value="Clear" class="btn btn-primary btn-sm" title="Clear selections and search output" />
                    </div>
                    <div class="col-sm-11"></div>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}